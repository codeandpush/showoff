<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="images/showoff_logo.png"/>
    <title>Showoff</title>
    <link rel="import" href="components/so-slide.html">
    <link rel="import" href="components/so-presentation.html">

    <!-- reference the ag-Grid library-->
    <script src="https://unpkg.com/ag-grid/dist/ag-grid.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/lodash@4.17.5/lodash.min.js"></script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://unpkg.com/eventemitter3@latest/umd/eventemitter3.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="css/app.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <style>
        html {
            width: 100%;
            height: 100%;
        }

        body {
            width: 100%;
            height: 100%;
            position: relative;
        }

        #connection_alert {
            display: none;
        }

        event-terminal:not(:defined) {
            display: inline-block;
            height: 100vh;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            background-color: hotpink;
        }

        event-terminal {
            height: 40px;
            width: 200px;
        }

        #navbar {
            padding-bottom: 50px;
            position: relative;
            z-index: 999;
            //min-height: 80px;
            width: 100%;
            background-color: transparent;
        }

        #navbar > nav {
            position: absolute;
            z-index: 1000;
            width: 100%;
            bottom: -110px;
            transition: all 0.25s ease;
            transition-delay: 0.3s;
        }

        #navbar:hover > nav {
            position: absolute;
            width: 100%;
            bottom: 10px;
        }

        main {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: whitesmoke;
        }

        #slides_container {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            display: none;
            background-color: black;
            color: ghostwhite;
        }

        ol[is="so-presentation"] {
            background-color: lawngreen;
        }

        i {
            border: solid rgba(255,255,255,0.5);
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
        }

        .right {
            transform: rotate(-45deg);
            -webkit-transform: rotate(-45deg);
        }

        .left {
            transform: rotate(135deg);
            -webkit-transform: rotate(135deg);
        }

        .up {
            transform: rotate(-135deg);
            -webkit-transform: rotate(-135deg);
        }

        .down {
            transform: rotate(45deg);
            -webkit-transform: rotate(45deg);
        }
    </style>
</head>
<body data-emit-keyup="stage" style="position: relative">


<div id="connection_alert"
     style="background-color: orange;width: 100%;position: absolute;left: 0px;top: 0px;height: 32px">
    <center style="color: white"><h5>Connection lost, please refresh the page</h5></center>
</div>


<main >
    <!--<so-presentation>-->
        <!--<so-slide></so-slide>-->
    <!--</so-presentation>-->
    <div class="container" style="margin-top: 16%">
        <div class="row" id="presentations">
            <div class="col-md-8 col-md-offset-4">
                <h1>No Presentations!</h1>
            </div>
        </div>
    </div>
    <div id="slides_container">
        <h1>Slides!</h1>
    </div>
</main>

<div style="position: absolute; bottom: 0px; width: 100%">
    <div class="container">
        <div id="navbar">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <h4 class="navbar-text" style="color: hotpink">Show<strong>off</strong></h4>
                        <ul class="nav navbar-nav">

                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a data-emit-click="previous_slide"><i class="arrow left"></i> Back</a></li>&nbsp;
                            <li><a data-emit-click="next_slide">Forward <i class="arrow right"></i></a></li>
                            <li style="margin-left: 16px"><a type="button" class="btn btn-link" data-emit-click="close_presentation" style="color: lightcoral">Close</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>
    </div>
</div>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous"></script>

<script src="js/app.js"></script>

<script>
    _.map(['so-presentation', 'so-slide'], (elemName) => {
        customElements.whenDefined(elemName).then(() => {
            console.log(`${elemName} defined`);
        })
    })

    customElements.define('so-presentation', SoPresentation)
    customElements.define('so-slide', SoSlide)
</script>
</body>
</html>