    <style>
        html{
            width: 100%;
            height: 100%;
        }
        body    {
            width: 100%;
            height: 100%;
            position: relative;
        }

        #connection_alert {
            display: none;
        }

        event-terminal:not(:defined) {
            display: inline-block;
            height: 100vh;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            background-color: hotpink;
        }

        event-terminal {
            height: 40px;
            width: 200px;
        }

        #navbar{
            padding-top: 50px;
            position: relative;
            z-index: 999;
            min-height: 80px;
            width: 100%;
            background-color: transparent;
        }

        #navbar > nav {
            position: absolute;
            z-index: 1000;
            width: 100%;
            top: -110px;
            transition: all 0.25s ease;
            transition-delay: 0.3s;
        }

        #navbar:hover > nav {
            position: absolute;
            width: 100%;
            top: 10px;
        }

        main{
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: whitesmoke;
        }

        ol[is="so-presentation"]{
            background-color: lawngreen;
        }
    </style>
</head>
